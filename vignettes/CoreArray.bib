	Title = {Accurate {HLA} type inference using a weighted similarity graph},
	Url = {http://www.hubmed.org/fulltext.cgi?uids=21172045},
	Volume = {11 Suppl 11},
	Year = {2010},
	Bdsk-Url-1 = {http://www.hubmed.org/fulltext.cgi?uids=21172045},
